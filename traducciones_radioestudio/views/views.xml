    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="traducciones_radioestudio.action_window">
      <field name="name">traducciones_radioestudio window</field>
      <field name="res_model">traducciones_radioestudio.traducciones_radioestudio</field>
      <field name="view_mode">tree,form</field>
    </record>


    <!-- server action to the one above -->

    <record model="ir.actions.server" id="traducciones_radioestudio.action_server">
      <field name="name">traducciones_radioestudio server</field>
      <field name="model_id" ref="model_traducciones_radioestudio_traducciones_radioestudio"/>
      <field name="state">code</field>
      <field name="code">
        action = {
          "type": "ir.actions.act_window",
          "view_mode": "tree,form",
          "res_model": model._name,
        }
      </field>
    </record>


    <!-- Top menu item -->

    <menuitem name="traducciones_radioestudio" id="traducciones_radioestudio.menu_root"/>

    <!-- menu categories -->

    <menuitem name="Menu 1" id="traducciones_radioestudio.menu_1" parent="traducciones_radioestudio.menu_root"/>
    <menuitem name="Menu 2" id="traducciones_radioestudio.menu_2" parent="traducciones_radioestudio.menu_root"/>

    <!-- actions -->

    <menuitem name="List" id="traducciones_radioestudio.menu_1_list" parent="traducciones_radioestudio.menu_1"
